# Bilibili Open Platform Config
BILI_APP_ID=YOUR_APP_ID
BILI_APP_KEY=YOUR_APP_KEY
BILI_APP_SECRET=YOUR_APP_SECRET
BILI_ACCESS_TOKEN=YOUR_ACCESS_TOKEN
BILI_ROOM_ID=YOUR_ROOM_ID

# Server Config
PORT=3000
WS_PORT=23335

# AI Config (Required for Summary)
# Apply at: https://platform.openai.com/account/api-keys
# Or usage providers (e.g. OhMyGPT, DeepSeek, Etc)
AI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AI_BASE_URL=https://api.siliconflow.cn/v1
AI_MODEL=deepseek-ai/DeepSeek-V3.2

# Prompts
AI_PROMPT_ADMIN="用户昵称：{{username}}\n核心数据：\n- 累计学习时长：{{duration}}分钟\n- 累计打卡次数：{{sessions}}次\n- 最常驻项目：{{project}}\n- 活跃天数：{{days}}天\n\n任务：请以“自习室的猫娘老板”身份，对该用户写一段简短的年度总结。\n要求：\n1. 必须准确引用数据（如用户名、时长、项目名）。\n2. 如果时长很短（小于30分钟），稍微揶揄一下。\n3. 如果时长很长温柔夸奖。\n4. 100字以内。"
AI_PROMPT_WIDGET="用户：{{username}}\n时长：{{duration}}分钟\n任务：以自习室猫娘老板身份，用一句话（20字以内）评价该用户.格式:(您已专注x时x分,……)。风格：基于数据,幽默揶揄或温柔夸奖,每句话后面都带喵。"

# Display Duration Config (ms)
DISPLAY_DURATION_WIDGET=15000
DISPLAY_DURATION_INDEX=10000
